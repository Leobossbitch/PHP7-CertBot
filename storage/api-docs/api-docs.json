    "definitions": {
        "Account": {
            "required": [
                "name",
                "contact",
                "zones",
                "acmeCAurl",
                "acmeLicense",
                "authType",
                "authProvider"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "example": "myAcmeAccount"
                },
                "contact": {
                    "type": "string",
                    "example": "me@myDomain.com"
                },
                "zones": {
                    "type": "string",
                    "example": "domain1.com domain2.com"
                },
                "acmecaurl": {
                    "type": "string",
                    "example": "https://my.acme.ca/api"
                },
                "acmelicense": {
                    "type": "string",
                    "example": "https://my.acme.ca/license.2.0.4.html"
                },
                "authtype": {
                    "type": "string",
                    "example": "dns-01"
                },
                "authprovider": {
                    "type": "string",
                    "example": "https://cloud.flare/api/url"
                },
                "authuser": {
                    "type": "string",
                    "example": "myaccount@cloud.flare"
                },
                "authpass": {
                    "type": "string",
                    "example": "SecretAPIKey"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "unregistered",
                        "registered"
                    ]
                }
            },
            "xml": {
                "name": "AcmeAccount"
            }
        }
